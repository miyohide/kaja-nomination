<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:nominees, :index) %></li>
      <li><%= link_to pat(:new), url(:nominees, :new) %></li>
      <li class="active"><%= link_to pat(:edit), url(:nominees, :edit, :id => @nominee.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:edit) %> <% mt(:nominee) %></h2>
    <div class="inner">
      <% form_for :nominee, url(:nominees, :update, :id => @nominee.id), :method => :put, :class => :form do |f| %>
        <%= partial "nominees/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
